    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            // https://code.visualstudio.com/docs/python/debugging
            "name": "Debug tests",
            "type": "python",
            "request": "launch",
            // avoid purpose when tests/subfolders
            // "purpose": [
            //     "debug-test"
            // ],
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                // "PYTEST_ADDOPTS": "--no-cov" // https://stackoverflow.com/a/67185092
            }
        }
    ]
}
